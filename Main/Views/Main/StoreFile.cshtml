@{Layout = "_Layout";}
@model Form.UploadedFilesDTO
<div class="row">
    <div class="col-md-12 p-5 pb-0 text-end">
        <a class="btn btn-secondary" href="/edit_album?id=@Model.AlbumId">ОК</a>
    </div>
</div>

<div class="row">

    <div class="col-md-2 p-5" style="width:500px">
        <h4 class="mb-3">Добавить снимки</h4>
        @if (@Model.ErrorMessage != null) {
            <div class="invalid-feedback">@Model.ErrorMessage</div>
        }
    </div>

    @if (@Model.ErrorMessage == null && @Model.Files != null) {
    <div class="col p-5">
        <h4 class="mb-3">Файлы</h4>
        <div class="row g-3 pb-3" id="uploadedFiles">   
            @foreach(var file in @Model.Files) {
                <div class="col-sm-4">@file.FileName</div>
                <div class="col-sm-8">@Model.FileErrors[@file.FileName]</div>
            } 
        </div>
        <input class="btn btn-primary" type="submit" value="Загрузить" id="uploadBtn" style="display:none">
    </div>
    }

</div>