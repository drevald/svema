@model Form.LoginDTO
<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>SVEMA</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N"
    crossorigin="anonymous"></script>
    <style>
      .invalid-feedback {
        display: block;
      }
    </style>
</head>

<body class="text-center">

  <section class="vh-100 bg-primary">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-6 col-xl-5">
          <div class="card shadow-2-strong" style="border-radius: 1rem;">
            <div class="card-body p-5 text-center">

              <form method="post" class="needs-validation" novalidate>

                <div class="row g-3  align-items">

                  <h2>Вход</h2>

                  @if (@Model.ErrorMessage != null)
                  {
                      <div class="invalid-feedback">@Model.ErrorMessage</div>
                  } else {
                      <div class="invalid-feedback">@Model.ErrorMessage</div>
                  }

                  <div class="col-12 text-start">
                    <label for="lastName" class="form-label">Имя</label>
                    <input  asp-for="Username" class="form-control" type="text" name="username">
                  </div>

                  <div class="col-12 text-start">
                    <label for="lastName" class="form-label">Пароль</label>
                    <input  asp-for="Password" class="form-control" type="password" name="password">
                  </div>

                  <div class="col-12 text-start">
                    <input type="submit" class="btn col-12  btn-primary btn-block g-3" value="Войти">
                  </div>

                  <div class="col-12 text-center">
                    <p>Нет аккаунта? <a href="register">Зарегиcтрируйтесь</a></p>
                  </div>

                </div>
              </form>

            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</body>

</html>