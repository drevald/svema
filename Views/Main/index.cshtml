@model IEnumerable<svema.Data.Album>
@{Layout = "_Layout";}
<table width="100%" height="100%" spacing="0" padding="0" border="0">
    <tr>
        <td width="240" bgcolor="#cccc99" style="padding:30px" >
            <a href="add_album">Add Album</a>
        </td>
        <td bgcolor="#eeeeee" style="padding:30px" >         
        @foreach(var album in Model) {
            <table style="display:inline" width="1">
                <tr><td><a href="/view_album?id=@album.AlbumId">
                @if (@album.PreviewId > 0) {
                <img width=200 height=200 src="/preview?id=@album.PreviewId">
                } 
                @if (@album.PreviewId == 0) {
                <img width=200 height=200 src="#">
                } 
                </a></td></tr>
                <tr><td  style="word-wrap: break-word" width="1">@album.Name</td></tr>
                <tr><td>
                    <a href="/view_album?id=@album.AlbumId">View</a>&nbsp;
                    <a href="/edit_album?id=@album.AlbumId">Edit</a>&nbsp;
                    <a href="/delete_album?id=@album.AlbumId">Delete</a>
                </td></tr>                
                <tr><td>&nbsp;</td></tr>                
            </table>
        }
        </td>        
    </tr>
</table>

