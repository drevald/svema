@{Layout = "_Layout";}
<table width="100%" height="100%" spacing="0" padding="0" border="0">
    <tr>
        <td width="240" bgcolor="#cccc99" style="padding:30px" >
            &nbsp;
        </td>
        <td bgcolor="#eeeeee" style="padding:30px" >    
            @foreach(var error in @ViewBag.errors)  {
                @error<br/>
            }       
            <h1>Upload files</h1>   
            <table>
                <form method="post" enctype="multipart/form-data" asp-controller="StoreFile" asp-action="store">
                <input type="hidden" name="albumId" value="@ViewBag.albumId"/>
                <tr><td>Files</td><td><input type="file" name="files" multiple/></td></tr>         
                <tr><td>&nbsp;</td><td><input type="submit" value="Upload"/></td></tr>        
                </form>
            </table>
            <a href="/view_album?id=@ViewBag.albumId">OK</a>        
        </td>        
    </tr>
</table>